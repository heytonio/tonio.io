---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-4">
      <article class="grid_hentry">
        <div class="grid_col grid_col-2-of-6">
          <h1 class="text-display mb-4">
            {title}
          </h1>
          <slot name="title-content" />
        </div>
        <div class="grid_col grid_col-4-of-6">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
